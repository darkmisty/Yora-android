<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/list_item_contact_request_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_item_contact_request_avatar"
        android:layout_alignTop="@+id/list_item_contact_request_avatar"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/list_item_contact_request_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_contact_request_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Display Name"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_contact_request_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created At"

            />


    </LinearLayout>

</RelativeLayout>