<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/list_item_message_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:padding="3dp">

        <ImageView
            android:id="@+id/list_item_message_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/list_item_message_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/list_item_message_avatar"
            android:text="Display Name"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_message_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_message_displayName"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/list_item_message_avatar"
            android:text="01/21/1992"
            android:textColor="#444" />

        <TextView
            android:id="@+id/list_item_message_sendReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_message_createdAt"
            android:layout_toEndOf="@+id/list_item_message_avatar"
            android:text="Received"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>